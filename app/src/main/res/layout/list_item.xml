<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" android:paddingBottom="8dp" android:paddingLeft="16dp"
                android:paddingRight="16dp">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:cardBackgroundColor="#ffffff">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="0.5" android:paddingLeft="8dp"
                    android:paddingRight="8dp">
                <TextView
                        android:id="@+id/name_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="名前" android:textSize="20sp" android:gravity="center_vertical"
                        android:paddingLeft="8dp" android:textStyle="bold" android:textColor="#000000"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_delete_black_24dp"
                        android:id="@+id/trashButton"
                        android:layout_weight="11"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="0.5" android:paddingLeft="8dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/github1"
                        android:id="@+id/imageView3"
                        android:layout_weight="1"/>
                <TextView
                        android:text="アカウント名"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/github_title" android:layout_weight="1"
                        android:textSize="20sp" android:gravity="center_vertical" android:paddingLeft="8dp"
                        android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="0.5" android:paddingLeft="8dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/twitter1"
                        android:id="@+id/imageView4"
                        android:layout_weight="0.5"/>
                <TextView
                        android:id="@+id/twitter_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text="アカウント名" android:textSize="20sp" android:gravity="center_vertical"
                        android:paddingLeft="8dp" android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>