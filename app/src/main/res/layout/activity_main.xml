<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
            android:text="Your Profile"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/myProfButton"
            android:textSize="24sp" android:background="@drawable/button1" android:textColor="#ffffff"
            android:textAllCaps="false"
            android:drawableBottom="@drawable/ic_perm_identity_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:autoText="false" android:textStyle="bold"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Friends' List"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/expressButton"
            android:textSize="24sp"
            android:background="@drawable/button1" android:textColor="#ffffff" android:textAllCaps="false"

            android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/myProfButton" app:layout_constraintHorizontal_bias="0.497"
            android:drawableBottom="@drawable/ic_playlist_add_black_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>