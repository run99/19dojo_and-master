<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GetActivity" android:padding="16dp" android:background="#ffffff"
        android:onClick="cancel">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/linearLayout" android:layout_marginTop="50dp" app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.5">
            <TextView
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="名前" android:textSize="32sp" android:gravity="center_vertical"
                    android:paddingLeft="8dp" android:textStyle="bold" android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.5">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/github1"
                    android:id="@+id/imageView3"
                    android:layout_weight="1"/>
            <TextView
                    android:text="アカウント名"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/githubText" android:layout_weight="1"
                    android:textSize="24sp" android:gravity="center_vertical" android:paddingLeft="8dp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.5">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/twitter1"
                    android:id="@+id/imageView4"
                    android:layout_weight="0.5"/>
            <TextView
                    android:id="@+id/twitterText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="アカウント名" android:textSize="24sp" android:gravity="center_vertical"
                    android:paddingLeft="8dp" android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>
    <Button
            android:text="Add"
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="add"
            android:background="@drawable/button1" android:textIsSelectable="true" android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginTop="136dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginStart="56dp"/>
    <Button
            android:text="Cancel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2" android:background="@drawable/button1" android:textColor="#ffffff"
            android:textSize="24sp" android:textAllCaps="false"
            android:layout_marginTop="136dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginEnd="56dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>